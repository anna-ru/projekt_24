<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsFragment">

    <TextView
        android:id="@+id/options_title"
        android:textColor="?attr/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options"
        android:fontFamily="@font/gruppo_regular"
        android:shadowRadius="2"
        android:shadowDy="2"
        android:textSize="40sp"
        android:textAlignment="center"
        android:lineSpacingExtra="10sp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/separator_under_title"
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="?attr/separatorColor"
        android:layout_below="@id/options_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:shadowRadius="2"
        android:shadowDy="2"
        />

        <CheckBox
            android:id="@+id/checkbox_isGroup"
            android:textColor="?attr/textColor"
            android:buttonTint="?attr/checkboxColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_under_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gruppo_regular"
            android:textSize="20sp"
            android:text="@string/group_activity" />

        <Spinner
            android:id="@+id/spinner_location"
            android:textColor="?attr/textColor"
            android:backgroundTint="?attr/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/checkbox_isGroup"
            android:fontFamily="@font/gruppo_regular"/>

        <Spinner
            android:id="@+id/spinner_price"
            android:textColor="?attr/textColor"
            android:backgroundTint="?attr/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/spinner_location"
            android:fontFamily="@font/gruppo_regular"/>

</RelativeLayout>