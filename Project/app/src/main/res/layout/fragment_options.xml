<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsFragment"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/options_title"
        android:textColor="?attr/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options"
        app:fontFamily="@font/dual_300"
        android:shadowRadius="2"
        android:shadowDy="2"
        android:textSize="40sp"
        android:textAlignment="center"
        android:lineSpacingExtra="10sp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/separator_under_title"
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="?attr/separatorColor"
        android:layout_below="@id/options_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:shadowRadius="2"
        android:shadowDy="2" />

    <RelativeLayout
        android:id="@+id/relative_layout_settings_1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator_under_title"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/label_isGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/group"
            android:textColor="?attr/textColor"
            android:textSize="24sp"
            app:fontFamily="@font/dual_300"
            android:layout_marginEnd="10sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:id="@+id/spinner_isGroup"
            android:textColor="?attr/textColor"
            android:backgroundTint="?attr/textColor"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/dual_300"
            android:textSize="24sp"
            tools:ignore="UnusedAttribute"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_settings_2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_settings_1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/label_location"
            android:textColor="?attr/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:text="@string/location"
            app:fontFamily="@font/dual_300"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:textSize="24sp"
            android:layout_marginEnd="10sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:id="@+id/spinner_location"
            android:textColor="?attr/textColor"
            android:backgroundTint="?attr/textColor"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/dual_300"
            android:textSize="24sp"
            tools:ignore="UnusedAttribute"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_settings_3"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_settings_2"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/label_price"
            android:textColor="?attr/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:text="@string/price"
            app:fontFamily="@font/dual_300"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:textSize="24sp"
            android:layout_marginEnd="10sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:id="@+id/spinner_price"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/textColor"
            android:textColor="?attr/textColor"
            app:fontFamily="@font/dual_300"
            android:textSize="24sp"
            tools:ignore="UnusedAttribute"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</RelativeLayout>