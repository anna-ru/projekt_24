<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item> -->
        <item name="colorAccent">@color/purple</item>
        <item name="backgroundColor">#FCFCFC</item>
        <item name="textColor">@color/grey</item>
        <item name="tintColor">#000000</item>
        <item name="buttonColor">@color/purple</item>
        <item name="popupColor">@color/purple</item>
        <item name="separatorColor">@color/light_grey</item>
        <item name="checkboxColor">@color/purple</item>
        <item name="android:shadowColor">@color/grey</item>
        <item name="fontFamily">@font/dual_300</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Dark theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item> -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#303030</item>
        <item name="textColor">#FFFFFF</item>
        <item name="tintColor">#FFFFFF</item>
        <item name="buttonColor">@color/colorAccent</item>
        <item name="popupColor">@color/colorAccent</item>
        <item name="separatorColor">@color/light_grey</item>
        <item name="checkboxColor">@color/colorAccent</item>
        <item name="fontFamily">@font/dual_300</item>
        <item name="android:shadowColor">@color/light_grey</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="event_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="fontFamily">@font/dual_300</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">?attr/checkboxColor</item>
    </style>

    <style name="TextInputEditTextTheme" >
        <item name="fontFamily">@font/dual_300</item>
        <item name="colorControlNormal">?attr/separatorColor</item>
        <item name="colorControlActivated">?attr/checkboxColor</item>
        <item name="colorControlHighlight">?attr/checkboxColor</item>
    </style>

    <style name="WindowAnimationTransition" >
        <item name="android:windowEnterAnimation" >@android:anim/fade_in</item>
        <item name="android:windowExitAnimation" >@android:anim/fade_out</item>
    </style>

</resources>
